<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EDA111" />
            <gradient  android:angle="-90"  android:startColor="#CD5E05" android:endColor="#F08F29"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F4932F" />
            <solid  android:color="#F08F29"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F4932F" />
            <gradient  android:angle="-90"  android:startColor="#EDA111" android:endColor="#F08F29" />
        </shape>
    </item>
</selector>